{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Markdown Viewer",
  "version": "0.1.0-alpha.4",
  "identifier": "com.markdown.viewer",
  "build": {
    "frontendDist": "../frontend/dist",
    "devUrl": "http://127.0.0.1:1420",
    "beforeDevCommand": "pnpm --dir frontend dev --host 127.0.0.1 --port 1420",
    "beforeBuildCommand": "pnpm --dir frontend build"
  },
  "app": {
    "windows": [
      {
        "title": "Markdown Viewer",
        "width": 1320,
        "height": 900,
        "minWidth": 980,
        "minHeight": 640,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: data: file: https:; media-src 'self' asset: data: file: https:; font-src 'self' asset: data:; style-src 'self' 'unsafe-inline'; script-src 'self'; connect-src 'self' ipc: http://ipc.localhost;",
      "devCsp": "default-src 'self' http://127.0.0.1:1420 ws://127.0.0.1:1420 data: blob: filesystem: 'unsafe-inline' 'unsafe-eval';"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": [
          "md",
          "markdown",
          "mdown",
          "mkd",
          "mkdn"
        ],
        "name": "Markdown Document",
        "description": "Markdown document",
        "mimeType": "text/markdown",
        "role": "Viewer"
      }
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [],
      "pubkey": ""
    }
  }
}
